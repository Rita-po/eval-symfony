{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card border-light col-md-4 p-0">
        <div class="card-header">Se connecter</div>
        <div class="card-body p-4">
            <form action="{{ path('app_login') }}" method="post">
                <label for="username" class="form-label">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control mb-3">

                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="_password" class="form-control mb-3">

                <button class="btn btn-secondary" type="submit">Se connecter</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
</div>
{% endblock %}
